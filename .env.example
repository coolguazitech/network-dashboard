# Database
DB_HOST=localhost
DB_PORT=3306
DB_NAME=netora
DB_USER=admin
DB_PASSWORD=admin
DB_ROOT_PASSWORD=admin

# phpMyAdmin
PMA_PORT=8080

# Fetcher Sources (per-source connection config)
FETCHER_SOURCE__FNA__BASE_URL=http://localhost:8001
FETCHER_SOURCE__FNA__TIMEOUT=30
FETCHER_SOURCE__DNA__BASE_URL=http://localhost:8001
FETCHER_SOURCE__DNA__TIMEOUT=30

# GNMS Ping (per-tenant base_url + 統一 endpoint)
GNMSPING__TIMEOUT=60
GNMSPING__ENDPOINT=/api/v1/ping
GNMSPING__BASE_URLS__F18=http://gnmsping-f18:8001
GNMSPING__BASE_URLS__F6=http://gnmsping-f6:8001
GNMSPING__BASE_URLS__AP=http://gnmsping-ap:8001
GNMSPING__BASE_URLS__F14=http://gnmsping-f14:8001
GNMSPING__BASE_URLS__F12=http://gnmsping-f12:8001

# Fetcher Endpoints (per-fetcher endpoint templates)
# 支援佔位符: {switch_ip}, {device_type}, {tenant_group} 等（ctx.params 的任意 key 亦可）
# 佔位符帶入路徑；未消耗的變數自動成為 query params
FETCHER_ENDPOINT__GET_GBIC_DETAILS=/api/v1/transceiver/{switch_ip}
FETCHER_ENDPOINT__GET_CHANNEL_GROUP=/api/v1/port-channel/{switch_ip}
FETCHER_ENDPOINT__GET_UPLINK=/api/v1/neighbors/{switch_ip}
FETCHER_ENDPOINT__GET_ERROR_COUNT=/api/v1/error-count/{switch_ip}
FETCHER_ENDPOINT__GET_STATIC_ACL=/api/v1/acl/static/{switch_ip}
FETCHER_ENDPOINT__GET_DYNAMIC_ACL=/api/v1/acl/dynamic/{switch_ip}
FETCHER_ENDPOINT__GET_MAC_TABLE=/api/v1/mac-table/{switch_ip}
FETCHER_ENDPOINT__GET_FAN=/api/v1/fan/{switch_ip}
FETCHER_ENDPOINT__GET_POWER=/api/v1/power/{switch_ip}
FETCHER_ENDPOINT__GET_VERSION=/api/v1/version/{switch_ip}
FETCHER_ENDPOINT__GET_INTERFACE_STATUS=/api/v1/interface-status/{switch_ip}

# JWT / Auth
JWT_SECRET=your-super-secret-key-change-this-in-production
JWT_EXPIRE_HOURS=24

# Application
APP_NAME=Network Dashboard
APP_DEBUG=true
APP_ENV=development
API_PREFIX=/api/v1

# Timezone
TIMEZONE=Asia/Taipei

# Scheduling
MAX_COLLECTION_DAYS=7              # Auto-stop collection after N days per maintenance

# Indicator Thresholds (部署前請確認正確值)
TRANSCEIVER_TX_POWER_MIN=-12.0     # 光模塊最小 TX 功率 (dBm)
TRANSCEIVER_RX_POWER_MIN=-18.0     # 光模塊最小 RX 功率 (dBm)
TRANSCEIVER_TEMPERATURE_MAX=60.0   # 光模塊最高溫度 (°C)
TRANSCEIVER_VOLTAGE_MIN=3.2        # 光模塊最低電壓 (V)

# MinIO / S3-compatible Object Storage
MINIO__ENDPOINT=localhost:9000
MINIO__ACCESS_KEY=minioadmin
MINIO__SECRET_KEY=minioadmin
MINIO__BUCKET=netora-uploads
MINIO__SECURE=false
MINIO__PUBLIC_URL=http://localhost:9000       # 瀏覽器存取 URL（K8s 換成 Ingress URL）

# Frontend UI Settings (VITE_ prefix for frontend access)
VITE_METEOR_ENABLED=true          # Enable meteor shower effect
VITE_METEOR_COUNT=5               # Number of meteors (3-8 recommended, more = busier)
VITE_METEOR_MIN_DURATION=0.8      # Minimum fall duration in seconds
VITE_METEOR_MAX_DURATION=1.5      # Maximum fall duration in seconds
VITE_METEOR_MAX_DELAY=15          # Full cycle time in seconds (meteors evenly distributed)
