# Database
DB_HOST=localhost
DB_PORT=3306
DB_NAME=netora
DB_USER=admin
DB_PASSWORD=admin
DB_ROOT_PASSWORD=admin

# phpMyAdmin
PMA_PORT=8080

# Fetcher Sources (per-source connection config, only used when USE_MOCK_API=false)
FETCHER_SOURCE__FNA__BASE_URL=http://localhost:8001
FETCHER_SOURCE__FNA__TIMEOUT=30
FETCHER_SOURCE__DNA__BASE_URL=http://localhost:8001
FETCHER_SOURCE__DNA__TIMEOUT=30
FETCHER_SOURCE__GNMSPING__BASE_URL=http://localhost:8001
FETCHER_SOURCE__GNMSPING__TIMEOUT=60

# Fetcher Endpoints (per-fetcher endpoint templates, only used when USE_MOCK_API=false)
# 支援佔位符: {switch_ip}, {device_type}, {tenant_group} 等（ctx.params 的任意 key 亦可）
# 佔位符會從 FetchContext 帶入路徑；未被消耗的變數自動成為 query params
FETCHER_ENDPOINT__TRANSCEIVER=/api/v1/transceiver/{switch_ip}
FETCHER_ENDPOINT__PORT_CHANNEL=/api/v1/port-channel/{switch_ip}
FETCHER_ENDPOINT__ACL=/api/v1/acl/{switch_ip}
FETCHER_ENDPOINT__VERSION=/api/v1/version/{switch_ip}
FETCHER_ENDPOINT__UPLINK=/api/v1/neighbors/{switch_ip}
FETCHER_ENDPOINT__FAN=/api/v1/fan/{switch_ip}
FETCHER_ENDPOINT__POWER=/api/v1/power/{switch_ip}
FETCHER_ENDPOINT__ERROR_COUNT=/api/v1/error-count/{switch_ip}
FETCHER_ENDPOINT__MAC_TABLE=/api/v1/mac-table/{switch_ip}
FETCHER_ENDPOINT__ARP_TABLE=/api/v1/arp-table/{switch_ip}
FETCHER_ENDPOINT__INTERFACE_STATUS=/api/v1/interface-status/{switch_ip}
FETCHER_ENDPOINT__PING=/api/v1/ping/batch

# Mock mode
USE_MOCK_API=true   # true=in-memory MockFetcher, false=hit real APIs above
MOCK_PING_CONVERGE_TIME=600  # Mock ping convergence time in seconds (default 600 = 10 min, 0 = instant)

# JWT / Auth
JWT_SECRET=your-super-secret-key-change-this-in-production
JWT_EXPIRE_HOURS=24

# Application
APP_NAME=Network Dashboard
APP_DEBUG=true
APP_ENV=development
API_PREFIX=/api/v1

# Timezone
TIMEZONE=Asia/Taipei

# Scheduling
MAX_COLLECTION_DAYS=7              # Auto-stop collection after N days per maintenance

# Indicator Thresholds (部署前請確認正確值)
TRANSCEIVER_TX_POWER_MIN=-12.0     # 光模塊最小 TX 功率 (dBm)
TRANSCEIVER_RX_POWER_MIN=-18.0     # 光模塊最小 RX 功率 (dBm)
TRANSCEIVER_TEMPERATURE_MAX=60.0   # 光模塊最高溫度 (°C)
TRANSCEIVER_VOLTAGE_MIN=3.2        # 光模塊最低電壓 (V)

# Frontend UI Settings (VITE_ prefix for frontend access)
VITE_METEOR_ENABLED=true          # Enable meteor shower effect
VITE_METEOR_COUNT=5               # Number of meteors (3-8 recommended, more = busier)
VITE_METEOR_MIN_DURATION=0.8      # Minimum fall duration in seconds
VITE_METEOR_MAX_DURATION=1.5      # Maximum fall duration in seconds
VITE_METEOR_MAX_DELAY=15          # Full cycle time in seconds (meteors evenly distributed)
