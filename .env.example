# Database
DB_HOST=localhost
DB_PORT=3306
DB_NAME=network_dashboard
DB_USER=admin
DB_PASSWORD=admin
DB_ROOT_PASSWORD=admin

# phpMyAdmin
PMA_PORT=8080

# External API
EXTERNAL_API_SERVER=http://localhost:8001
EXTERNAL_API_TIMEOUT=30
USE_MOCK_API=true   # true=in-memory MockApiClient, false=hit EXTERNAL_API_SERVER
MOCK_PING_CONVERGE_TIME=600  # Mock ping convergence time in seconds (default 600 = 10 min, 0 = instant)

# JWT / Auth
JWT_SECRET=your-super-secret-key-change-this-in-production
JWT_EXPIRE_HOURS=24

# Application
APP_NAME=Network Dashboard
APP_DEBUG=true
APP_ENV=development
API_PREFIX=/api/v1

# Config paths
SWITCHES_CONFIG_PATH=config/switches.yaml
INDICATORS_CONFIG_PATH=config/indicators.yaml
