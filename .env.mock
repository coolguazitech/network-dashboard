# =============================================================================
# Mock 模式環境設定（開箱即用，不需改任何值）
#
# 使用方式：
#   cp .env.mock .env
#   docker compose -f docker-compose.production.yml --profile mock up -d
# =============================================================================

# Database
DB_HOST=db
DB_PORT=3306
DB_NAME=netora
DB_USER=admin
DB_PASSWORD=admin
DB_ROOT_PASSWORD=admin

# Ports
APP_PORT=8000
PMA_PORT=8080

# JWT / Auth
JWT_SECRET=mock-dev-secret-do-not-use-in-production
JWT_EXPIRE_HOURS=24

# Application
APP_NAME=Network Dashboard
APP_DEBUG=true
APP_ENV=development
API_PREFIX=/api/v1

# Timezone
TIMEZONE=Asia/Taipei

# Scheduling
MAX_COLLECTION_DAYS=7

# Indicator Thresholds
TRANSCEIVER_TX_POWER_MIN=-12.0
TRANSCEIVER_RX_POWER_MIN=-18.0
TRANSCEIVER_TEMPERATURE_MAX=60.0
TRANSCEIVER_VOLTAGE_MIN=3.2

# ── Fetcher Sources（全部指向 mock-api 容器）──
FETCHER_SOURCE__FNA__BASE_URL=http://mock-api:9999
FETCHER_SOURCE__FNA__TIMEOUT=30
FETCHER_SOURCE__FNA__TOKEN=
FETCHER_SOURCE__DNA__BASE_URL=http://mock-api:9999
FETCHER_SOURCE__DNA__TIMEOUT=30

# ── GNMS Ping（全部指向 mock-api 容器）──
GNMSPING__TIMEOUT=60
GNMSPING__ENDPOINT=/api/v1/ping
GNMSPING__TOKEN=mock-token
GNMSPING__BASE_URLS__F18=http://mock-api:9999
GNMSPING__BASE_URLS__F6=http://mock-api:9999
GNMSPING__BASE_URLS__AP=http://mock-api:9999
GNMSPING__BASE_URLS__F14=http://mock-api:9999
GNMSPING__BASE_URLS__F12=http://mock-api:9999

# ── Fetcher Endpoints（Mock API 格式）──
FETCHER_ENDPOINT__GET_GBIC_DETAILS=/api/get_gbic_details
FETCHER_ENDPOINT__GET_CHANNEL_GROUP=/api/get_channel_group
FETCHER_ENDPOINT__GET_UPLINK=/api/get_uplink
FETCHER_ENDPOINT__GET_ERROR_COUNT=/api/get_error_count
FETCHER_ENDPOINT__GET_STATIC_ACL=/api/get_static_acl
FETCHER_ENDPOINT__GET_DYNAMIC_ACL=/api/get_dynamic_acl
FETCHER_ENDPOINT__GET_MAC_TABLE=/api/get_mac_table
FETCHER_ENDPOINT__GET_FAN=/api/get_fan
FETCHER_ENDPOINT__GET_POWER=/api/get_power
FETCHER_ENDPOINT__GET_VERSION=/api/get_version
FETCHER_ENDPOINT__GET_INTERFACE_STATUS=/api/get_interface_status

# ── S3-compatible Object Storage (SeaweedFS) ──
MINIO__ENDPOINT=seaweedfs:8333
MINIO__ACCESS_KEY=minioadmin
MINIO__SECRET_KEY=minioadmin
MINIO__BUCKET=netora-uploads
MINIO__SECURE=false
MINIO__PUBLIC_URL=

# ── Mock Server 模擬參數 ──
MOCK_STEADY_FAILURE_RATE=0.05
MOCK_STEADY_ONSET_RANGE=3600

# Frontend UI
VITE_METEOR_ENABLED=true
VITE_METEOR_COUNT=5
