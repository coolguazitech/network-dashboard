    <div v-if="showAnchorTimeDialog" class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50">
      <div class="bg-white rounded-lg shadow-xl max-w-md w-full mx-4">
        <div class="p-6">
          <div class="flex justify-between items-center mb-4">
            <h2 class="text-xl font-bold">è¨­å®šæ­²ä¿®éŒ¨é»æ™‚é–“</h2>
            <button @click="showAnchorTimeDialog = false" class="text-gray-500 hover:text-gray-700">âœ•</button>
          </div>

          <div class="mb-4">
            <label class="block text-sm font-medium text-gray-700 mb-2">
              éŒ¨é»æ™‚é–“ï¼ˆç”¨æ–¼å€åˆ† BEFORE/AFTERï¼‰
            </label>
            <input
              v-model="anchorTimeInput"
              type="datetime-local"
              class="w-full px-3 py-2 border rounded"
            />
            <p class="text-xs text-gray-500 mt-1">
              æ­¤æ™‚é–“å‰çš„æ•¸æ“šè¦–ç‚º BEFOREï¼Œæ­¤æ™‚é–“å¾Œçš„æ•¸æ“šè¦–ç‚º AFTER
            </p>
          </div>

          <div v-if="currentAnchorTime" class="mb-4 p-3 bg-blue-50 rounded">
            <p class="text-sm text-gray-700">
              ç•¶å‰éŒ¨é»æ™‚é–“ï¼š<span class="font-mono font-semibold">{{ formatDateTime(currentAnchorTime) }}</span>
            </p>
          </div>

          <div class="flex gap-2">
            <button
              @click="updateAnchorTime"
              class="flex-1 px-4 py-2 bg-indigo-600 text-white rounded hover:bg-indigo-700"
            >
              æ›´æ–°
            </button>
            <button
              @click="showAnchorTimeDialog = false"
              class="flex-1 px-4 py-2 bg-gray-300 text-gray-700 rounded hover:bg-gray-400"
            >
              å–æ¶ˆ
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
</template>

<script>
export default {
  name: "Comparison",
  inject: ['maintenanceId'], // æ³¨å…¥å…¨å±€ maintenance ID
  data() {
    return {
      severityFilter: "",
      changedOnly: false,
      searchText: "",
      allComparisons: [],
      summary: null,
      selectedComparison: null,
      loading: false,
      currentPage: 1,
      pageSize: 25,
      
      // æ™‚é–“é¸æ“‡
      timepoints: [],
      selectedBeforeTime: null,
      statistics: [],
      chartOptions: null,
      
      // å¤šé¸ç¯©é¸æ¨™ç±¤
      activeFilters: ['all'],  // é»˜èªå…¨é¸
      filterTags: [
        { value: 'all', label: 'å…¨éƒ¨', icon: 'ğŸ“‹', color: 'blue' },
        { value: 'has_issues', label: 'æœ‰ç•°å¸¸', icon: 'âš ï¸', color: 'orange' },
        { value: 'critical', label: 'åš´é‡å•é¡Œ', icon: 'ğŸ”´', color: 'red' },
        { value: 'warning', label: 'è­¦å‘Š', icon: 'ğŸŸ¡', color: 'yellow' },
        { value: 'reference', label: 'ä¸æ–·é›»æ©Ÿå°', icon: 'âš¡', color: 'purple' },
      ],
      
      // ä¸æ–­é›»æ©Ÿå°æ¸…å–®
      referenceClients: [],
    };
  },
  computed: {
    // ä½¿ç”¨å…¨å±€çš„ maintenance ID
    selectedMaintenanceId() {
      return this.maintenanceId;
    },
    // æ’åºï¼šé‡å¤§å•é¡Œ â†’ è­¦å‘Š â†’ æ­£å¸¸
    sortedComparisons() {
      const severityOrder = { critical: 1, warning: 2, info: 3, unchanged: 4 };
      return [...this.allComparisons].sort((a, b) => {
        const orderA = a.is_changed ? (severityOrder[a.severity] || 3) : 4;
        const orderB = b.is_changed ? (severityOrder[b.severity] || 3) : 4;
        return orderA - orderB;
      });
    },
    // åˆ†é å¾Œçš„è³‡æ–™
    paginatedComparisons() {
      const start = (this.currentPage - 1) * this.pageSize;
      const end = start + this.pageSize;
      return this.sortedComparisons.slice(start, end);
    },
    // ç¸½é æ•¸
    totalPages() {
      return Math.ceil(this.sortedComparisons.length / this.pageSize) || 1;
    },
    // ç”¨æ–¼é¡¯ç¤ºçš„æ‰€æœ‰æ¯”è¼ƒçµæœï¼ˆåˆ¥åï¼‰
    comparisons() {
      return this.sortedComparisons;
    },
    // åˆ¤æ–·æ˜¯å¦ç‚ºä¸æ–·é›»æ©Ÿå°
    isReferenceClient() {
      return (mac_address) => {
        return this.referenceClients.some(rc => rc.mac_address === mac_address);
      };
    },
  },
  watch: {
    // ç›£è½é ç¢¼è®ŠåŒ–ï¼Œè‡ªå‹•æ»¾å‹•åˆ°é ‚éƒ¨
    currentPage() {
      window.scrollTo({ top: 0, behavior: 'smooth' });
    },
    // ç›£è½å…¨å±€ maintenance ID è®ŠåŒ–
    selectedMaintenanceId(newId) {
      if (newId) {
        this.loadSummary();
        this.loadComparisons();
      }
    },
  },
  mounted() {
    // å¦‚æœå·²ç¶“æœ‰é¸æ“‡ï¼Œç«‹å³è¼‰å…¥
    if (this.selectedMaintenanceId) {
      this.loadSummary();
      this.loadComparisons();
      this.loadReferenceClients();
      this.loadCheckpoints();
      this.loadAnchorTime();
    }
  },
  methods: {
    async onMaintenanceIdChange() {
      await this.loadSummary();
      await this.loadComparisons();
    },

    quickFilter(mode) {
      this.filterMode = mode;
      this.currentPage = 1;  // é‡ç½®åˆ°ç¬¬ä¸€é 
      if (mode === 'all') {
        this.severityFilter = "";
      } else if (mode === 'critical') {
        this.severityFilter = "critical";
      } else if (mode === 'warning') {
        this.severityFilter = "warning";
      }
      this.loadComparisons();
    },

    getFieldLabel(field) {
      const labels = {
        switch_hostname: "ğŸ”Œ äº¤æ›æ©Ÿ",
        interface_name: "ğŸ”Œ é€£æ¥åŸ å£",
        link_status: "ğŸ”— é€£æ¥ç‹€æ…‹",
        ping_reachable: "ğŸ“¡ Ping å¯é”æ€§",
        acl_passes: "ğŸ”’ ACL æª¢æŸ¥",
        speed: "âš¡ é€£æ¥é€Ÿç‡",
        duplex: "ğŸ”„ é›™å·¥æ¨¡å¼",
        vlan_id: "ğŸ·ï¸ VLAN ID",
        ip_address: "ğŸŒ IP åœ°å€",
      };
      return labels[field] || field;
    },

    formatValue(value) {
      if (value === null || value === undefined) return "ç„¡";
      if (typeof value === "boolean") return value ? "âœ“ æ˜¯" : "âœ— å¦";
      return String(value);
    },

    async generateComparisons() {
      if (!this.selectedMaintenanceId) return;

      this.loading = true;
      try {
        const response = await fetch(`/api/v1/comparisons/generate/${this.selectedMaintenanceId}`, {
          method: "POST",
        });

        if (!response.ok) throw new Error("ç”Ÿæˆå¤±æ•—");

        const data = await response.json();
        console.log("ç”Ÿæˆçµæœ:", data);

        await this.loadSummary();
        await this.loadComparisons();
      } catch (error) {
        console.error("ç”Ÿæˆæ¯”è¼ƒå¤±æ•—:", error);
        alert("ç”Ÿæˆæ¯”è¼ƒå¤±æ•—ï¼š" + error.message);
      } finally {
        this.loading = false;
      }
    },

    async loadSummary() {
      if (!this.selectedMaintenanceId) return;

      try {
        const response = await fetch(
          `/api/v1/comparisons/summary/${this.selectedMaintenanceId}`
        );

        if (!response.ok) throw new Error("åŠ è¼‰æ‘˜è¦å¤±æ•—");

        const data = await response.json();
        this.summary = data.summary;
      } catch (error) {
        console.error("åŠ è¼‰æ‘˜è¦å¤±æ•—:", error);
      }
    },

    async loadComparisons() {
      if (!this.selectedMaintenanceId) return;

      this.loading = true;
      try {
        const params = new URLSearchParams({
          changed_only: this.changedOnly,
        });

        if (this.severityFilter) {
          params.append("severity", this.severityFilter);
        }

        if (this.searchText) {
          params.append("search_text", this.searchText);
        }

        const response = await fetch(
          `/api/v1/comparisons/list/${this.selectedMaintenanceId}?${params.toString()}`
        );

        if (!response.ok) throw new Error("åŠ è¼‰å¤±æ•—");

        const data = await response.json();
        this.allComparisons = data.results || [];
        this.currentPage = 1;  // é‡ç½®åˆ°ç¬¬ä¸€é 
      } catch (error) {
        console.error("åŠ è¼‰æ¯”è¼ƒçµæœå¤±æ•—:", error);
        this.allComparisons = [];
      } finally {
        this.loading = false;
      }
    },

    // å°å‡º CSV
    exportToCSV() {
      if (!this.allComparisons || this.allComparisons.length === 0) {
        alert('æ²’æœ‰è³‡æ–™å¯å°å‡º');
        return;
      }

      // CSV æ¨™é¡Œ
      const headers = [
        'MAC åœ°å€',
        'ä¸»æ©Ÿåç¨±',
        'IP åœ°å€',
        'ç‹€æ…‹',
        'åš´é‡ç¨‹åº¦',
        'æ­²ä¿®å‰_äº¤æ›æ©Ÿ',
        'æ­²ä¿®å‰_é€£æ¥åŸ ',
        'æ­²ä¿®å‰_é€Ÿç‡',
        'æ­²ä¿®å‰_é›™å·¥',
        'æ­²ä¿®å‰_VLAN',
        'æ­²ä¿®å‰_é€£æ¥ç‹€æ…‹',
        'æ­²ä¿®å‰_Pingå¯é”',
        'æ­²ä¿®å¾Œ_äº¤æ›æ©Ÿ',
        'æ­²ä¿®å¾Œ_é€£æ¥åŸ ',
        'æ­²ä¿®å¾Œ_é€Ÿç‡',
        'æ­²ä¿®å¾Œ_é›™å·¥',
        'æ­²ä¿®å¾Œ_VLAN',
        'æ­²ä¿®å¾Œ_é€£æ¥ç‹€æ…‹',
        'æ­²ä¿®å¾Œ_Pingå¯é”',
        'ä¸ä¸€è‡´é …ç›®'
      ];

      // è½‰æ›è³‡æ–™
      const rows = this.sortedComparisons.map(c => {
        // æå–ä¸ä¸€è‡´é …ç›®
        let differences = [];
        if (c.differences && typeof c.differences === 'object') {
          differences = Object.keys(c.differences).map(key => {
            const diff = c.differences[key];
            const label = this.getFieldLabel(key);
            return `${label}: ${this.formatValue(diff.pre)} â†’ ${this.formatValue(diff.post)}`;
          });
        }

        // å®‰å…¨åœ°è¨ªå•å·¢ç‹€è³‡æ–™
        const pre = c.pre || {};
        const post = c.post || {};

        return [
          c.mac_address || '',
          pre.hostname || post.hostname || '',
          pre.ip_address || post.ip_address || '',
          c.is_changed ? 'æœ‰è®ŠåŒ–' : 'ç„¡è®ŠåŒ–',
          c.severity === 'critical' ? 'é‡å¤§å•é¡Œ' : c.severity === 'warning' ? 'è­¦å‘Š' : c.is_changed ? 'è³‡è¨Š' : 'æ­£å¸¸',
          pre.switch_hostname || '',
          pre.interface_name || '',
          pre.speed || '',
          pre.duplex || '',
          pre.vlan_id || '',
          pre.link_status || '',
          pre.ping_reachable !== null && pre.ping_reachable !== undefined ? (pre.ping_reachable ? 'æ˜¯' : 'å¦') : '',
          post.switch_hostname || '',
          post.interface_name || '',
          post.speed || '',
          post.duplex || '',
          post.vlan_id || '',
          post.link_status || '',
          post.ping_reachable !== null && post.ping_reachable !== undefined ? (post.ping_reachable ? 'æ˜¯' : 'å¦') : '',
          differences.join('; ')
        ];
      });

      // çµ„åˆ CSV
      const csvContent = [
        headers.join(','),
        ...rows.map(row => row.map(cell => `"${String(cell).replace(/"/g, '""')}"`).join(','))
      ].join('\n');

      // åŠ å…¥ BOM ä»¥æ”¯æŒ Excel æ­£ç¢ºé¡¯ç¤ºä¸­æ–‡
      const BOM = '\uFEFF';
      const blob = new Blob([BOM + csvContent], { type: 'text/csv;charset=utf-8;' });
      const link = document.createElement('a');
      const url = URL.createObjectURL(blob);
      
      link.setAttribute('href', url);
      link.setAttribute('download', `client_comparison_${this.selectedMaintenanceId}_${new Date().toISOString().slice(0, 10)}.csv`);
      link.style.visibility = 'hidden';
      document.body.appendChild(link);
      link.click();
      document.body.removeChild(link);
    },

    selectComparison(comparison) {
      this.selectedComparison = comparison;
    },

    // ===== æ–°å¢ï¼šä¸æ–·é›»æ©Ÿå°ç›¸é—œ =====
    async loadReferenceClients() {
      try {
        const response = await fetch('/api/v1/maintenance/reference-clients');
        if (response.ok) {
          this.referenceClients = await response.json();
        }
      } catch (error) {
        console.error('è¼‰å…¥ä¸æ–·é›»æ©Ÿå°åˆ—è¡¨å¤±æ•—:', error);
      }
    },

    // ===== æ–°å¢ï¼šCheckpoint ç›¸é—œ =====
    async loadCheckpoints() {
      if (!this.selectedMaintenanceId) return;
      
      try {
        const response = await fetch(`/api/v1/maintenance/checkpoints/${this.selectedMaintenanceId}`);
        if (response.ok) {
          this.checkpoints = await response.json();
        }
      } catch (error) {
        console.error('è¼‰å…¥ checkpoints å¤±æ•—:', error);
      }
    },

    async createCheckpoint() {
      if (!this.newCheckpoint.name) {
        alert('è«‹è¼¸å…¥ Checkpoint åç¨±');
        return;
      }

      try {
        const response = await fetch('/api/v1/maintenance/checkpoints', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({
            maintenance_id: this.selectedMaintenanceId,
            name: this.newCheckpoint.name,
            description: this.newCheckpoint.description,
            checkpoint_time: new Date().toISOString(),
            created_by: 'system',
          }),
        });

        if (response.ok) {
          this.newCheckpoint = { name: '', description: '' };
          await this.loadCheckpoints();
          alert('Checkpoint å‰µå»ºæˆåŠŸ');
        }
      } catch (error) {
        console.error('å‰µå»º checkpoint å¤±æ•—:', error);
        alert('å‰µå»ºå¤±æ•—ï¼š' + error.message);
      }
    },

    async deleteCheckpoint(id) {
      if (!confirm('ç¢ºå®šè¦åˆªé™¤æ­¤ Checkpointï¼Ÿ')) return;

      try {
        const response = await fetch(`/api/v1/maintenance/checkpoints/${id}`, {
          method: 'DELETE',
        });

        if (response.ok) {
          await this.loadCheckpoints();
        }
      } catch (error) {
        console.error('åˆªé™¤ checkpoint å¤±æ•—:', error);
      }
    },

    // ===== æ–°å¢ï¼šéŒ¨é»æ™‚é–“ç›¸é—œ =====
    async loadAnchorTime() {
      if (!this.selectedMaintenanceId) return;

      try {
        const response = await fetch(`/api/v1/maintenance/config/${this.selectedMaintenanceId}`);
        if (response.ok) {
          const data = await response.json();
          this.currentAnchorTime = data.anchor_time;
          if (this.currentAnchorTime) {
            // è½‰æ›ç‚º datetime-local æ ¼å¼
            const date = new Date(this.currentAnchorTime);
            this.anchorTimeInput = date.toISOString().slice(0, 16);
          }
        }
      } catch (error) {
        console.error('è¼‰å…¥éŒ¨é»æ™‚é–“å¤±æ•—:', error);
      }
    },

    async updateAnchorTime() {
      if (!this.anchorTimeInput) {
        alert('è«‹é¸æ“‡éŒ¨é»æ™‚é–“');
        return;
      }

      try {
        const response = await fetch(`/api/v1/maintenance/config/${this.selectedMaintenanceId}`, {
          method: 'PUT',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({
            anchor_time: new Date(this.anchorTimeInput).toISOString(),
          }),
        });

        if (response.ok) {
          await this.loadAnchorTime();
          this.showAnchorTimeDialog = false;
          alert('éŒ¨é»æ™‚é–“æ›´æ–°æˆåŠŸ');
        }
      } catch (error) {
        console.error('æ›´æ–°éŒ¨é»æ™‚é–“å¤±æ•—:', error);
        alert('æ›´æ–°å¤±æ•—ï¼š' + error.message);
      }
    },

    formatDateTime(datetime) {
      if (!datetime) return '';
      const date = new Date(datetime);
      return date.toLocaleString('zh-TW', {
        year: 'numeric',
        month: '2-digit',
        day: '2-digit',
        hour: '2-digit',
        minute: '2-digit',
      });
    },
  },
};
</script>

