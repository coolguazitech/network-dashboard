# =============================================================================
# Production 環境設定範本
# 使用前請複製為 .env 並修改密碼與金鑰
# =============================================================================

# Database
DB_HOST=db
DB_PORT=3306
DB_NAME=netora
DB_USER=admin
DB_PASSWORD=<改成強密碼>
DB_ROOT_PASSWORD=<改成強密碼>

# Ports
APP_PORT=8000
PMA_PORT=8080

# Mock mode（true=內建模擬資料, false=連接真實 API）
USE_MOCK_API=true
MOCK_PING_CONVERGE_TIME=600

# JWT / Auth
JWT_SECRET=<改成隨機字串>
JWT_EXPIRE_HOURS=24

# Application
APP_NAME=Network Dashboard
APP_DEBUG=false
APP_ENV=production
API_PREFIX=/api/v1

# Timezone
TIMEZONE=Asia/Taipei

# Scheduling
MAX_COLLECTION_DAYS=7

# Indicator Thresholds
TRANSCEIVER_TX_POWER_MIN=-12.0
TRANSCEIVER_RX_POWER_MIN=-18.0
TRANSCEIVER_TEMPERATURE_MAX=60.0
TRANSCEIVER_VOLTAGE_MIN=3.2

# Fetcher Sources (USE_MOCK_API=false 時使用)
FETCHER_SOURCE__FNA__BASE_URL=http://fna-server:8001
FETCHER_SOURCE__FNA__TIMEOUT=30
FETCHER_SOURCE__DNA__BASE_URL=http://dna-server:8001
FETCHER_SOURCE__DNA__TIMEOUT=30
FETCHER_SOURCE__GNMSPING__BASE_URL=http://gnmsping-server:8001
FETCHER_SOURCE__GNMSPING__TIMEOUT=60

# Fetcher Endpoints (USE_MOCK_API=false 時使用)
FETCHER_ENDPOINT__TRANSCEIVER=/api/v1/transceiver/{switch_ip}
FETCHER_ENDPOINT__PORT_CHANNEL=/api/v1/port-channel/{switch_ip}
FETCHER_ENDPOINT__VERSION=/api/v1/version/{switch_ip}
FETCHER_ENDPOINT__UPLINK=/api/v1/neighbors/{switch_ip}
FETCHER_ENDPOINT__FAN=/api/v1/fan/{switch_ip}
FETCHER_ENDPOINT__POWER=/api/v1/power/{switch_ip}
FETCHER_ENDPOINT__ERROR_COUNT=/api/v1/error-count/{switch_ip}
FETCHER_ENDPOINT__MAC_TABLE=/api/v1/mac-table/{switch_ip}
FETCHER_ENDPOINT__ARP_TABLE=/api/v1/arp-table/{switch_ip}
FETCHER_ENDPOINT__INTERFACE_STATUS=/api/v1/interface-status/{switch_ip}
FETCHER_ENDPOINT__PING=/api/v1/ping/batch

# Frontend UI
VITE_METEOR_ENABLED=true
VITE_METEOR_COUNT=5
